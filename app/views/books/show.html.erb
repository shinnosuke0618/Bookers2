<h2>Book detail</h2>

<div>
<%= image_tag @book.user.get_profile_image %>
<p><%= @book.user.name %></p>
<p><%= @book.title %></p>
<p><%= @book.body %></p>
<% if @book.user == current_user %>
<%= link_to "Edit", edit_book_path(@book) %>
<% end %>
<% if @book.user == current_user %>
<%= link_to "Destroy", book_path(@book), method: :delete %>
<% end %>

</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/7e855d2f1d.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
    <a class="navbar-brand" href="/"><span>Bookers</span></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse"
    data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
    aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon">
      </span>
     </button>
     <% if user_signed_in? %>
     <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
      <li class="nav-item mr-3">
        <%= link_to user_path(current_user) do %>
        <i class="fas fa-home text-light"></i><span class="text-light">Home</span>
        <% end %>
      </li>
    ã€€<li class="nav-item mr-3">
        <%= link_to users_path do %>
        <i class="fas fa-users text-light"></i><span class="text-light">Users</span>
        <% end %>
      </li>
      <li class="nav-item mr-3">
        <%= link_to books_path do %>
        <i class="fas fa-book-open text-light"></i><span class="text-light">Books</span>
        <% end %>
      <li class="nav-item mr-3">
        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-sign-out-alt text-light"></i><span class="text-light">Log out</span>
        <% end %>
       </li>
      </ul>
    <% else %>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item mr-3">
        <%= link_to root_path do %>
        <i class="fas fa-home text-light"></i><span class="text-light">Home</span>
        <% end %>
      </li>
      <li class="nav-item mr-3">
        <%= link_to about_path do %>
        <i class="fas fa-link text-light"></i><span class="text-light">About</span>
        <% end %>
      </li>
      <li class="nav-item mr-3">
        <%= link_to new_user_registration_path do %>
        <i class="fas fa-user-plus text-light"></i><span class="text-light">Sign up</span>
        <% end %>
      </li>
      <li class="nav-item mr-3">
        <%= link_to new_user_session_path do %>
        <i class="fas fa-sign-in-alt text-light"></i><span class="text-light">Log in</span>
        <% end %>
      </li>
    </ul>
    </div>
   </div>
  </nav>

    <% end %>
</header>
 <% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
</div>
<% end %>

<main class="mb-auto">
<%= yield %>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>